<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>HotAnnualRevenueValidation</fullName>
    <active>false</active>
    <errorConditionFormula>AND( AnnualRevenue &lt; 10000, ISPICKVAL(Rating, &#39;Hot&#39;))</errorConditionFormula>
    <errorMessage>To mark rating as Hot, annual revenue should be greater than 99,999</errorMessage>
</ValidationRule>
